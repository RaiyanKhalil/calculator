<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/background_dark">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="207dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:background="@android:color/background_dark"
        android:layout_margin="0dp"
        android:gravity="bottom|right"
        android:textSize="70sp"
        android:nestedScrollingEnabled="false"
        android:maxLines="2"
        android:maxLength="17" />

    //7
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //8
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //9
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //Plus (+)
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickPLus"
        android:maxWidth="90dp" />

    //4
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //5
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //6
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //Minus (-)
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //1
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //2
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //3
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //Multiplication (X)
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="X"
        android:id="@+id/btnMulti"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickMult"
        android:maxWidth="90dp" />

    //Clear
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/btnC"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickClear"
        android:maxWidth="90dp" />

    //0
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btnC"
        android:layout_toEndOf="@+id/btnC"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    //Euals
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnEquals"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClickEquals"
        android:maxWidth="90dp" />

    //Division
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:layout_below="@+id/btnMulti"
        android:layout_toRightOf="@+id/btnEquals"
        android:layout_toEndOf="@+id/btnEquals"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@android:color/background_dark"
        android:onClick="onClickDiv"
        android:maxWidth="90dp" />
</RelativeLayout>